<%= content_for(:title,  '持有余额列表 | BLOCK') %>
<section class="content-header">
  <h1>
    持有余额 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-gg-circle"></i> 持有余额</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_admin_balance_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加余额</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
            <tr>
              <th tabindex="0" aria-controls="example1" style="text-align: center">区块</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">数量</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center">成本</th>
              <th tabindex="0" aria-controls="example1" style="text-align: center;width: 240px">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @balances.each do |item| %>
              <tr style="text-align: center">
                <td><%= item.block %></td>
                <td><%= item.balance %></td>
                <td><%= item.cost %></td>
                <td>
                  <a href="<%= edit_admin_balance_path(item) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                    编辑
                  </a>
                  <a href="<%= admin_balance_path(item) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除余额吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                    删除
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="dataTables_info" id="example1_info" role="status" aria-live="polite"><h5>总计：<%= @balances.count %> </h5></div>
        </div>
        <div class="col-sm-12">
          <div class="dataTables_paginate paging_simple_numbers">
          <%= will_paginate @balances, :class=>'apple_pagination' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>