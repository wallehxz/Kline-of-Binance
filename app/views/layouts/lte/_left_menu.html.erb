<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('favicon.png')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p><%= current_user.email.split('@')[0] %></p>
      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">交易中心</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'index'%>">
      <a href="<%= admin_stock_path %>" target="_self">
        <i class="fa fa-dashboard"></i> <span> 一刻行情</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'day_bar'%>">
      <a href="<%= admin_day_bar_path %>" target="_self">
        <i class="fa fa-asterisk"></i> <span> 日线行情</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'chains' %>">
      <a href="<%= admin_chains_path %>" target="_self">
        <i class="fa fa-btc"></i> <span> 区块货币</span>
      </a>
    </li>
    <% if controller_name == 'markets' %>
      <li class="treeview <%= 'active' if controller_name =='markets' %>">
        <a href="<%= admin_chain_markets_path(params[:chain_id]) %>" target="_self">
          <i class="fa fa-line-chart"></i> <span> 历史行情</span>
        </a>
      </li>
    <% end %>
    <li class="treeview <%= 'active' if controller_name == 'strategies' %>">
      <a href="<%= admin_strategies_path %>" target="_self">
        <i class="fa fa-bandcamp"></i> <span> 收益策略</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'bills' %>">
      <a href="<%= admin_bills_path %>" target="_self">
        <i class="fa fa-sheqel"></i> <span> 买卖定单</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'balances' %>">
      <a href="<%= admin_balances_path %>" target="_self">
        <i class="fa fa-gg-circle"></i> <span> 持有余额</span>
      </a>
    </li>
  </ul>
</section>